					<OnClick>
						MovAny:ProfileSaveAsClicked(self)
					</OnClick>
				</Scripts>
			</Button>
			
			<Button name="MAOptProfileAdd" inherits="MAButtonTemplate" text="+">
				<Size>
					<AbsDimension x="20" y="20"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="MAOptProfileSaveAs" relativePoint="TOPRIGHT">
						<Offset>
