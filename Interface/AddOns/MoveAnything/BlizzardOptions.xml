						<Offset>
							<AbsDimension x="0" y="5"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						self:SetText(MOVANY.EXPORT_PROFILE)
						--self.tooltipText = ""
